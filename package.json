{
  "name": "close-issue-app",
  "version": "1.0.0",
  "description": "",
  "author": "helloqiu <helloqiu95@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/offu/close-issue-app",
  "scripts": {
    "dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "build": "rimraf dist && tsc",
    "start": "probot run ./dist/robot.js",
    "test": "jest --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "js-yaml": "3.13.1",
    "probot": "7.3.1"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.6",
    "@types/jest": "24.0.11",
    "@types/js-yaml": "3.12.1",
    "@types/node": "10.14.4",
    "jest": "24.5.0",
    "nodemon": "1.18.10",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.1",
    "tslint": "5.14.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.4.2"
  },
  "engines": {
    "node": ">= 10"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ]
  }
}
