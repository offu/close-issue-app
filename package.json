{
  "name": "werobot-bot",
  "version": "1.0.0",
  "description": "",
  "author": "helloqiu <helloqiu95@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/offu/werobot-bot.git",
  "scripts": {
    "dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "build": "rimraf dist && tsc",
    "start": "probot run ./dist/robot.js",
    "test": "jest --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "js-yaml": "3.12.1",
    "probot": "7.3.1",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.5",
    "@types/bunyan-format": "0.2.0",
    "@types/cache-manager": "1.2.6",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.12",
    "@types/js-yaml": "3.11.4",
    "@types/jsonwebtoken": "8.3.0",
    "@types/nock": "9.3.0",
    "@types/node": "8.10.39",
    "@types/raven": "2.5.2",
    "@types/resolve": "0.0.8",
    "@types/semver": "5.5.0",
    "@types/supertest": "2.0.7",
    "jest": "23.6.0",
    "nodemon": "1.18.9",
    "rimraf": "2.6.3",
    "smee-client": "1.0.2",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-standard": "8.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ]
  }
}
