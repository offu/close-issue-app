{
  "name": "werobot-bot",
  "version": "1.0.0",
  "description": "",
  "author": "helloqiu <helloqiu95@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/offu/werobot-bot.git",
  "scripts": {
    "dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "build": "rimraf dist && tsc",
    "start": "probot run ./dist/robot.js",
    "test": "jest --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "js-yaml": "3.12.2",
    "probot": "7.3.1"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.5",
    "@types/bunyan-format": "0.2.0",
    "@types/cache-manager": "1.2.6",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.1",
    "@types/jest": "23.3.14",
    "@types/js-yaml": "3.12.0",
    "@types/jsonwebtoken": "8.3.0",
    "@types/nock": "9.3.1",
    "@types/node": "8.10.42",
    "@types/raven": "2.5.3",
    "@types/resolve": "0.0.8",
    "@types/semver": "5.5.0",
    "@types/supertest": "2.0.7",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "rimraf": "2.6.3",
    "smee-client": "1.0.2",
    "ts-jest": "24.0.0",
    "tslint": "5.13.1",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.3.3333"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ]
  }
}
