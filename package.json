{
  "name": "werobot-bot",
  "version": "1.0.0",
  "description": "",
  "author": "helloqiu <helloqiu95@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/offu/werobot-bot.git",
  "scripts": {
    "dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "build": "rimraf dist && tsc",
    "start": "probot run ./dist/robot.js",
    "test": "jest --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "js-yaml": "3.12.0",
    "probot": "https://github.com/probot/probot",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.4",
    "@types/bunyan-format": "0.2.0",
    "@types/cache-manager": "1.2.6",
    "@types/dotenv": "4.0.3",
    "@types/express": "4.16.0",
    "@types/jest": "23.1.2",
    "@types/js-yaml": "3.11.1",
    "@types/jsonwebtoken": "7.2.7",
    "@types/nock": "9.1.3",
    "@types/node": "8.10.20",
    "@types/raven": "2.5.1",
    "@types/resolve": "0.0.8",
    "@types/semver": "5.5.0",
    "@types/supertest": "2.0.4",
    "jest": "23.2.0",
    "nodemon": "1.17.5",
    "rimraf": "2.6.2",
    "smee-client": "1.0.2",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-config-standard": "7.1.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ]
  }
}
