{
  "name": "close-issue-app",
  "version": "1.0.0",
  "description": "",
  "author": "helloqiu <helloqiu95@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "repository": "https://github.com/offu/close-issue-app",
  "scripts": {
    "dev": "nodemon -e ts --exec \"tsc && npm run start\"",
    "build": "rimraf dist && tsc",
    "start": "probot run ./dist/robot.js",
    "test": "jest --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "js-yaml": "3.13.1",
    "probot": "9.6.2"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.6",
    "@types/jest": "24.0.21",
    "@types/js-yaml": "3.12.1",
    "@types/node": "10.17.3",
    "jest": "24.9.0",
    "nodemon": "1.19.4",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.6.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ]
  }
}
